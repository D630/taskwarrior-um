# Files
#data.location=
exit.on.missing.db=no
gc=on
locking=on

# Terminal
avoidlastcolumn=no
defaultheight=24
defaultwidth=0
detection=on
#editor=vi
#edit.verbose=DEPRECATED
hyphenate=on
reserved.lines=1

# Shell
shell.prompt=task>

# Miscellaneous
abbreviation.minimum=2
active.indicator=*
bulk=3
burndown.bias=0.666
column.padding=1
complete.all.projects=yes
complete.all.tags=yes
confirmation=yes
debug=no
debug.tls=0
dependency.indicator=D
dom=on
expressions=on
_forcecolor=no
indent.annotation=2
indent.report=0
json.array=off
list.all.projects=yes
list.all.tags=yes
locale=
nag=You have more urgent tasks.
patterns=on
print.empty.columns=yes
recurrence.indicator=R
recurrence.limit=1
regex=on
row.padding=0
search.case.sensitive=yes
tag.indicator=+
undo.style=diff
verbose=off
xterm.title=no

# Extensions
extensions=on

# Dates
calendar.details.report=list
calendar.details=sparse
calendar.holidays=none
calendar.legend=yes
calendar.offset=no
calendar.offset.value=-1
dateformat.annotation=V_Y-M-D_H:N
dateformat.edit=V_Y-M-D_H:N
dateformat.holiday=Y-M-D
dateformat.info=V_Y-M-D_H:N
dateformat.report=V_Y-M-D_H:N
dateformat=Y-M-D_H:N
displayweeknumber=yes
due=7
weekstart=monday

# Journal Entries
journal.info=on
journal.time=no
journal.time.start.annotation=Started task
journal.time.stop.annotation=Stopped task

# Holidays
monthsperline=3

# Dependencies
dependency.confirmation=on
dependency.reminder=on

# Color Controls
color.active=rgb555 on rgb410
color.alternate=on color233
color.blocked=white on color8
color.blocking=white on color6
color.burndown.done=color0 on rgb050
color.burndown.pending=color0 on rgb500
color.burndown.started=color0 on rgb550
color.calendar.due=color0 on color1
color.calendar.due.today=color15 on color1
color.calendar.holiday=color0 on color11
color.calendar.overdue=color0 on color9
color.calendar.today=color15 on rgb013
color.calendar.weekend=color235
color.calendar.weeknumber=rgb013
color.debug=color3
color.due=color1
color.due.today=rgb400
color.error=color3
color.footnote=color3
color.header=color3
color.history.add=color0 on rgb500
color.history.delete=color0 on rgb550
color.history.done=color0 on rgb050
color=off
color.overdue=color9
color.pri.H=rgb255
color.pri.L=rgb245
color.pri.M=rgb250
color.pri.none=
color.recurring=rgb013
color.scheduled=rgb444 on rgb410
color.summary.background=white on color0
color.summary.bar=black on rgb141
color.sync.added=rgb005
color.sync.changed=rgb550
color.sync.rejected=rgb500
color.tagged=rgb031
color.undo.after=color2
color.undo.before=color1
fontunderline=yes
rule.precedence.color=due.today,active,blocking,blocked,overdue,due,scheduled,keyword.,project.,tag.,uda.,recurring,pri.,tagged,completed,deleted

# Urgency
urgency.active.coefficient=
urgency.age.coefficient=
urgency.age.max=
urgency.annotations.coefficient=
urgency.blocked.coefficient=
urgency.blocking.coefficient=
urgency.due.coefficient=
urgency.next.coefficient=
urgency.priority.coefficient=
urgency.project.coefficient=
urgency.scheduled.coefficient=
urgency.tags.coefficient=
urgency.waiting.coefficient=

# Shadow File
shadow.command=list
#shadow.file=/home/user/.task/shadow.txt
shadow.notify=on

# Defaults
default.command=ruri
default.due=
default.priority=
default.project=null

# Sync
#taskd.certificate=<path>
#taskd.ciphers=NORMAL
#taskd.credentials=<organization>/<user>/<key>
#taskd.key=<path>
#taskd.server=<host>:<port>
#taskd.trust=yes|no

# Aliase
alias.shell=exec tasksh
alias.burndown=burndown.weekly
alias.history=history.monthly
alias.ghistory=ghistory.monthly
alias.rm=delete
alias._query=export

# Reports
report.active.columns=id,project,priority,due,start.active,entry.age,description
report.active.description=Lists
report.active.filter=status:pending
report.active.labels=ID,Proj,Pri,Due,Active,Age,Description
report.active.sort=due+,priority-,project+
report.all.columns=id,status,project,priority,due,end,start.active,entry.age,description
report.all.description=Lists
report.all.filter=status.not:deleted
report.all.labels=ID,Status,Proj,Pri,Due,Completed,Active,Age,Description
report.all.sort=entry+
report.blocked.columns=id,depends,project,priority,due,start.active,entry.age,description
report.blocked.description=Lists
report.blocked.filter=status:pending
report.blocked.labels=ID,Deps,Proj,Pri,Due,Active,Age,Description
report.blocked.sort=due+,priority-,start-,project+
report.blocking.columns=id,depends,project,priority,due,start.active,entry.age,description
