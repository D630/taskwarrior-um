report.overdue.sort=due+,priority-,start-,project+
report.ready.columns=id,project,priority,due,start.active,entry.age,urgency,description
report.ready.description=Lists
report.ready.filter=status:pending limit:page -WAITING '(scheduled.none: or scheduled.before:now )'
report.ready.labels=ID,Proj,Pri,Due,A,Age,Urg,Description
report.ready.sort=urgency-,due+,priority-,start-,project+
report.recurring.columns=id,project,priority,due,recur,start.active,entry.age,description
report.recurring.description=Lists
report.recurring.filter=status:pending
report.recurring.labels=ID,Proj,Pri,Due,Recur,Active,Age,Description
report.recurring.sort=due+,priority-,start-,project+
report.unblocked.columns=id,depends,project,priority,due,start.active,entry.age,description
report.unblocked.description=Lists
report.unblocked.filter=status:pending
report.unblocked.labels=ID,Deps,Proj,Pri,Due,Active,Age,Description
report.unblocked.sort=due+,priority-,start-,project+
report.waiting.columns=id,project,priority,wait,entry.age,description
report.waiting.description=Lists
report.waiting.filter=status:waiting
report.waiting.labels=ID,Proj,Pri,Wait,Age,Description
report.waiting.sort=wait+,priority-,project+

